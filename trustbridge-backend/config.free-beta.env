# TrustBridge Free Beta Configuration - 100% Free APIs
# Copy this to .env and update with your actual API keys

# Database
MONGODB_URI=mongodb+srv://devcasta:NQZ2mqBmiG1nXwQa@cluster0.ilmv3jy.mongodb.net/trustbridge?retryWrites=true&w=majority&appName=Cluster0

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Hedera (REQUIRED - Get from https://portal.hedera.com/)
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_REAL_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_REAL_PRIVATE_KEY

# Server
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://trustbridge.africa

# File Storage (FREE - Local storage)
FILE_STORAGE_TYPE=local
GOOGLE_DRIVE_ENABLED=false

# OCR (FREE - Tesseract.js)
OCR_PROVIDER=tesseract
TESSERACT_LANGUAGE=eng

# GPS (FREE - OpenStreetMap)
GPS_PROVIDER=openstreetmap

# Notifications (FREE - Console logging)
NOTIFICATION_TYPE=console
EMAIL_PROVIDER=none
SMS_PROVIDER=none

# External APIs (FREE alternatives)
# OpenWeatherMap (FREE tier - 1,000 calls/day)
OPENWEATHER_API_KEY=YOUR_FREE_OPENWEATHER_KEY

# Alpha Vantage (FREE tier - 5 calls/minute, 500 calls/day)
ALPHA_VANTAGE_API_KEY=YOUR_FREE_ALPHA_VANTAGE_KEY

# CoinGecko (FREE - No API key required)
COINGECKO_ENABLED=true

# Payments (FREE - HBAR only)
PAYMENT_PROVIDER=hbar
STRIPE_ENABLED=false

# Nigeria/Lagos Specific Settings
DEFAULT_COUNTRY=Nigeria
DEFAULT_REGION=Lagos
DEFAULT_CURRENCY=NGN
DEFAULT_TIMEZONE=Africa/Lagos

# Lagos Coordinates (for testing)
DEFAULT_LAT=6.5244
DEFAULT_LNG=3.3792

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://trustbridge.africa
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/trustbridge.log

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# FREE API LIMITS
# OpenWeatherMap: 1,000 calls/day (FREE)
# Alpha Vantage: 5 calls/minute, 500 calls/day (FREE)
# CoinGecko: No limits (FREE)
# OpenStreetMap: No limits (FREE)
# Tesseract.js: No limits (FREE, local)
# Console logging: No limits (FREE)
