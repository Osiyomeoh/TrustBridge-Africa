# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Hedera (REQUIRED - Get from https://portal.hedera.com/)
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_REAL_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_REAL_PRIVATE_KEY

# Admin Configuration
ADMIN_WALLETS=0x1234567890abcdef1234567890abcdef12345678,0x876543210fedcba9876543210fedcba9876543210
SUPER_ADMIN_WALLET=0x1234567890abcdef1234567890abcdef12345678
PLATFORM_ADMIN_WALLETS=0x876543210fedcba9876543210fedcba9876543210
AMC_ADMIN_WALLETS=0x1111111111111111111111111111111111111111

# Server
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://trustbridge.africa

# File Storage (REQUIRED for beta)
FILE_STORAGE_TYPE=google-drive
GOOGLE_DRIVE_ENABLED=true

# Google APIs (REQUIRED for OCR and GPS)
GOOGLE_API_KEY=YOUR_REAL_GOOGLE_API_KEY
GOOGLE_DRIVE_CLIENT_ID=YOUR_GOOGLE_DRIVE_CLIENT_ID
GOOGLE_DRIVE_CLIENT_SECRET=YOUR_GOOGLE_DRIVE_CLIENT_SECRET
GOOGLE_DRIVE_REFRESH_TOKEN=YOUR_GOOGLE_DRIVE_REFRESH_TOKEN
GOOGLE_DRIVE_FOLDER_ID=YOUR_GOOGLE_DRIVE_FOLDER_ID

# Notifications (REQUIRED for beta)
NOTIFICATION_TYPE=real
EMAIL_PROVIDER=sendgrid
SMS_PROVIDER=africastalking

# SendGrid (REQUIRED for email notifications)
SENDGRID_API_KEY=YOUR_REAL_SENDGRID_KEY
SENDGRID_FROM_EMAIL=noreply@trustbridge.africa

# Africa's Talking (REQUIRED for SMS in Nigeria)
AT_USERNAME=YOUR_AT_USERNAME
AT_API_KEY=YOUR_AT_API_KEY
AT_SENDER_ID=TrustBridge

# Twilio (Backup SMS provider)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_FROM_NUMBER=YOUR_TWILIO_FROM_NUMBER

# External APIs (REQUIRED for real data)
# OpenWeatherMap (REQUIRED for weather data)
OPENWEATHER_API_KEY=YOUR_REAL_OPENWEATHER_KEY

# Alpha Vantage (REQUIRED for market data)
ALPHA_VANTAGE_API_KEY=YOUR_REAL_ALPHA_VANTAGE_KEY

# AWS (REQUIRED for advanced OCR)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1

# Payments (REQUIRED for beta)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY

# Chainlink (REQUIRED for production oracles)
CHAINLINK_VRF_COORDINATOR=YOUR_CHAINLINK_VRF_COORDINATOR
CHAINLINK_LINK_TOKEN=YOUR_CHAINLINK_LINK_TOKEN
CHAINLINK_KEY_HASH=YOUR_CHAINLINK_KEY_HASH
CHAINLINK_FEE=100000000000000000

# Nigeria/Lagos Specific Settings
DEFAULT_COUNTRY=Nigeria
DEFAULT_REGION=Lagos
DEFAULT_CURRENCY=NGN
DEFAULT_TIMEZONE=Africa/Lagos

# Lagos Coordinates (for testing)
DEFAULT_LAT=6.5244
DEFAULT_LNG=3.3792

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://trustbridge.africa
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/trustbridge.log

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
