# TrustBridge Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/trustbridge

# Frontend URLs for CORS
FRONTEND_URL=https://www.tbafrica.xyz
TBAFRICA_URL=https://www.tbafrica.xyz
VERCEL_URL=trust-bridge-africa.vercel.app

# Hedera Configuration
HEDERA_ACCOUNT_ID=0.0.123456
HEDERA_PRIVATE_KEY=your_hedera_private_key_here
HEDERA_NETWORK=testnet

# Pinata IPFS Configuration
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Paga Payment Configuration
PAGA_PUBLIC_KEY=your_paga_public_key_here
PAGA_SECRET_KEY=your_paga_secret_key_here
PAGA_HASH_KEY=your_paga_hash_key_here
PAGA_CALLBACK_URL=https://trustbridge-africa.onrender.com/api/paga/webhook

# Google AI Studio Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=4001
NODE_ENV=production

# Development vs Production
# For development, use:
# FRONTEND_URL=http://localhost:3000
# NODE_ENV=development

# For production, use:
# FRONTEND_URL=https://www.tbafrica.xyz
# NODE_ENV=production